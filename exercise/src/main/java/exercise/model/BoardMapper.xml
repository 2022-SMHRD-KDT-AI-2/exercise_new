<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.exercise.model.BoardMapper">
  <select id="selectAll" resultType="exercise.entity.BoardVO">
    select * from board order by idx desc
  </select>
  
  <insert id="boardInsert" parameterType="exercise.entity.BoardVO">
    insert into board(idx,memId,title,content,writer)
    values(board_idx.nextval,#{memId},#{title},#{content},#{writer})
  </insert>
  
  <select id = "getByIdx" parameterType="int" resultType = "kr.exercise.entity.BoardVO">
  	select * from board where idx = #{idx}
  </select>
  
  <delete id="boardDelete" parameterType="int">
  	delete from board where idx = #{idx}
  </delete>
  
  <update id="boardUpdate" parameterType="exercise.entity.BoardVO">
  	update board set title=#{title}, content=#{content} where idx=#{idx}
  </update>
  
  <update id="addCount" parameterType="int">
  	update board set count=count+1 where idx=#{idx}
  </update>
  
  <select id="checkLogin"  parameterType="exercise.entity.MemberVO"
                           resultType="exercise.entity.MemberVO">
     select * from member 
     where memId=#{memId} and memPwd=#{memPwd} 
  </select>
  
  <insert id="memberInsert" parameterType="exercise.entity.MemberVO">
    insert into tbl_member(mb_id,mb_pw,mb_nick,mb_addr)
    values(#{memId},#{memPw},#{memNick},#{memAddr})
  </insert>
</mapper>

