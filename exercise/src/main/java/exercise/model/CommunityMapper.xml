<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="exercise.CommuntiyMapper">
 
  <select id="selectAll" resultType="exercise.entity.CommuntiyVO">
     select * from board order by idx desc
  </select>
  
  <insert id="communityInsert" parameterType="exercise.entity.CommuntiyVO">
     insert into board(idx, memId, title, content, writer)
   values(board_idx.nextval, #{memId}, #{title}, #{content}, #{writer})
  </insert>
  
  <select id="getByIdx" parameterType="int" resultType="exercise.entity.CommuntiyVO">
     select * from board where idx=#{idx}
  </select>
   
  <delete id="communityDelete" parameterType="int"> 
     delete from board where idx=#{idx}  
  </delete>
  
  <update id="communityUpdate" parameterType="exercise.entity.CommuntiyVO">
     update board 
     set title=#{title},content=#{content}
     where idx=#{idx}
  </update>
  
  <update id="addCount" parameterType="int">
     update board 
     set count=count+1
     where idx=#{idx}
  </update>
  
  <select id="checkLogin"  parameterType="exercise.entity.MemberVO"
                           resultType="exercise.entity.MemberVO">
     select * from member 
     where memId=#{memId} and memPwd=#{memPwd} 
  </select>
  
  
</mapper>



